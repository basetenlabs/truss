FROM {{ config.base_image.image }}

{%- if data_dir_exists %}
{# Use /app/data directly rather than ${APP_HOME}/data: no-build skips base.Dockerfile.jinja, so APP_HOME is not set in the user's base image. #}
COPY --chown={{ run_as_user_id }}:{{ run_as_user_id }} ./{{ config.data_dir }} /app/data
{%- endif %}
